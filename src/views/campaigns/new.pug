extends /partials/layout

block content
  div.campaign-setup-page
    h1 Set Up Your Campaign

    div.campaign-form
      form(action='/campaigns/new', method="POST")
        input(type="text", name="campaign_name", maxlength="20", placeholder="Campaign Name" required)
        br
        input(type="text", name="organization_name", maxlength="20", placeholder="Organization Name" required)
        br
        button(type='submit')
          | Create
